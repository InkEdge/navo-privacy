  <script>
    function switchLang() {
      const zh = {
        title: "产品功能",
        subtitle: "智能隐私助手",
        f1: ["隐私保险箱", "私密照片加密存储，保障您的隐私安全。"],
        f2: ["照片清理", "智能识别相似照片，释放空间更高效。"],
        f3: ["视频清理", "快速清理重复/大体积视频，节省存储。"],
        i1: "应用名称", i2: "版本号", i3: "支持语言", i4: "支持平台",
        download: "可在 App Store 下载",
        policy: `<h3>隐私政策</h3><p>Navo 应用仅访问必要的系统权限（照片、相机、麦克风），所有数据仅保存在设备本地，采用端到端加密，不上传云端。</p>`,
        footer: "Navo - 智能隐私助手 · © 2024 Navo. All rights reserved."
      };
      const en = {
        title: "Features",
        subtitle: "Smart Privacy Assistant",
        f1: ["Private Vault", "Encrypt private photos securely and protect your privacy."],
        f2: ["Photo Cleaner", "Smartly detect duplicate and similar photos to free up space."],
        f3: ["Video Cleaner", "Clean large and duplicate videos quickly to save storage."],
        i1: "App Name", i2: "Version", i3: "Languages", i4: "Platform",
        download: "Available on the App Store",
        policy: `<h3>Privacy Policy</h3><p>Navo only requests necessary permissions (Photos, Camera, Microphone). All data stays locally on your device with end-to-end encryption. No data is uploaded.</p>`,
        footer: "Navo - Smart Privacy Assistant · © 2024 Navo. All rights reserved."
      };

      const lang = document.getElementById("title").innerText === zh.title ? en : zh;
      document.getElementById("title").innerText = lang.title;
      document.getElementById("subtitle").innerText = lang.subtitle;
      document.getElementById("f1-title").innerText = lang.f1[0];
      document.getElementById("f1-desc").innerText = lang.f1[1];
      document.getElementById("f2-title").innerText = lang.f2[0];
      document.getElementById("f2-desc").innerText = lang.f2[1];
      document.getElementById("f3-title").innerText = lang.f3[0];
      document.getElementById("f3-desc").innerText = lang.f3[1];
      document.getElementById("i1").innerText = lang.i1;
      document.getElementById("i2").innerText = lang.i2;
      document.getElementById("i3").innerText = lang.i3;
      document.getElementById("i4").innerText = lang.i4;
      document.getElementById("download-text").innerText = lang.download;
      document.getElementById("policy").innerHTML = lang.policy;
      document.getElementById("footer").innerText = lang.footer;
    }
  </script>
